{
	"stanzas":4,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Soleil de justice,",
				"Jésus, bon Sauveur,",
				"Sois à tous propice;",
				"Sauve le pécheur!",
				"Que ta connaissance",
				"Couvre l'univers",
				"Comme l'onde immense",
				"L'abîme des mers!"
			]
		},
		{"label":"2",
			"lines":[
				"Hélas! on ignore",
				"Ton puissant amour;",
				"Mais déjà l'aurore",
				"Annonce le jour.",
				"Que son éclat vienne",
				"Ouvrir tous les yeux!",
				"Que la nuit païenne",
				"S'efface en tous lieux!"
			]
		},
		{"label":"3",
			"lines":[
				"Sa grâce ineffable",
				"Amène le coeur",
				"Le plus indomptable",
				"Captif au Seigneur.",
				"Les peuples sauvages,",
				"Entendant sa voix,",
				"Rendront leurs hommages",
				"Au Christ mis en croix."
			]
		},
		{"label":"4",
			"lines":[
				"Gloire soit au Père,",
				"Notre Créateur;",
				"Au Fils, notre frère,",
				"Notre Rédempteur;",
				"À l'Esprit de grâce,",
				"Qui sur son troupeau",
				"Répand l'efficace",
				"Du sang de l'Agneau!"
			]
		}
	]
}

