{
	"stanzas":3,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Avec allégresse",
				"Marcher vers le ciel,",
				"Regarder sans cesse",
				"Notre Emmanuel;",
				"Puiser foi nouvelle",
				"Dans ce doux regard,",
				"De l'âme fidèle,",
				"C'est la sûre part."
			]
		},
		{"label":"Choeur",
			"lines":[
				"Frères, frères, les coeurs en haut!",
				"Jésus nous appelle,",
				"Il viendra bientôt.",
				"Jésus nous appelle,",
				"Il viendra bientôt."
			]
		},
		{"label":"2",
			"lines":[
				"Là, tout est lumière, Paix et sainteté;",
				"Là, plus de misère,",
				"Tout est charité.",
				"Sur ce doux rivage",
				"Ont cessé les pleurs;",
				"Jésus, ton image",
				"Est dans tous les coeurs."
			]
		},
		{"label":"3",
			"lines":[
				"Amis, bon courage!",
				"L'étoile qui luit",
				"Dissipe l'orage",
				"Et la sombre nuit.",
				"Veillons sur notre âme,",
				"Jésus vient bientôt!",
				"Lui seul nous réclame :",
				"Tous les coeurs en haut!"
			]
		},
		{"label":"Choeur",
			"lines":[
				"Frères, frères, le ciel est près!",
				"Jésus, Roi de gloire,",
				"Y règne à jamais!",
				"Jésus, Roi de gloire,",
				"Y règne à jamais!"
			]
		}
	]
}

