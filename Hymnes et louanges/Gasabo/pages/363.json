{
	"stanzas":3,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Sur toi, Sauveur, qui se fonde,",
				"Peut au péché résister;",
				"L'effort du monde",
				"Pour le tenter,",
				"Est comme l'onde",
				"Contre un rocher.",
				"Est comme l'onde",
				"Contre un rocher."
			]
		},
		{"label":"2",
			"lines":[
				"Quelle est, ô Dieu! la puissance",
				"D'un seul désir, d'un penchant!",
				"Sans vigilance,",
				"Le plus vaillant",
				"Tombe et t'offense",
				"En un moment.",
				"Tombe et t'offense",
				"En un moment."
			]
		},
		{"label":"3",
			"lines":[
				"Qu'en toi ma paix soit parfaite;",
				"Sois mon rocher, ô Dieu fort!",
				"Dans la tempête",
				"Deviens mon port,",
				"Et ma retraite",
				"Même en la mort.",
				"Et ma retraite",
				"Même en la mort."
			]
		}
	]
}

