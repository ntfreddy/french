{
	"stanzas":5,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Ton jour, Seigneur!",
				"Parle à mon coeur,",
				"De paix et de lumière.",
				"Bénis ce jour",
				"Où ton amour ",
				"M'appelle à la prière."
			]
		},
		{"label":"2",
			"lines":[
				"Dieu tout-puissant!",
				"Dieu bienfaisant!",
				"J'ai besoin de ta grâce.",
				"Éclaire-moi;",
				"Soutiens ma foi.",
				"Je viens chercher ta face."
			]
		},
		{"label":"3",
			"lines":[
				"Ta vérité,",
				"Ta charité",
				"Brillent dans ta Parole.",
				"Seule elle instruit,",
				"Guide et conduit",
				"Notre âme et la console."
			]
		},
		{"label":"4",
			"lines":[
				"J'entends ta voix;",
				"Tes saintes lois",
				"Ne sont pas difficiles,",
				"Viens les graver,",
				"Les conserver",
				"Dans des âmes dociles."
			]
		},
		{"label":"5",
			"lines":[
				"Que ton Esprit",
				"Ô Jésus-Christ",
				"Règne seul en notre âme;",
				"Que ton amour,",
				"Et nuit et jour,",
				"L'embrase de sa flamme. "
			]
		}
	]
}

