{
	"stanzas":4,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Quand je passe au crible,",
				"Frissonnant de peur,",
				"Une voix paisible",
				"Murmure à mon coeur :",
				"Dépose les armes,",
				"J'ai vaincu pour toi;",
				"Enfant, plus de larmes,",
				"Ne crains rien, c'est moi."
			]
		},
		{"label":"2",
			"lines":[
				"C'est dans la détresse",
				"Que je suis tout près,",
				"Ma vive tendresse",
				"Ne s'endort jamais.",
				"L'épreuve bénie",
				"Brise tes liens;",
				"Ma main ne châtie",
				"Que ceux qui sont miens."
			]
		},
		{"label":"3",
			"lines":[
				"Puisque ton Dieu t'aime,",
				"Pourquoi craindre encor!",
				"Sa grâce suprême",
				"Dirige ton sort.",
				"Entonne avec joie",
				"Un hymne de paix,",
				"Et que l'on te voie",
				"Heureux à jamais."
			]
		},
		{"label":"4",
			"lines":[
				"Seigneur, je t'adore,",
				"Je m'attends à toi.",
				"Oh! subviens encore",
				"À ma faible foi.",
				"Dans ta main fidèle",
				"Je place ma main;",
				"Caché sous ton aile",
				"Mon coeur ne craint rien!"
			]
		}
	]
}

