	"lyrics": [
		{"label":"1",
			"lines":[
				"Roc séculaire,",
				"Frappé pour moi",
				"Sur le Calvaire,",
				"Je viens à toi.",
				"Tu sais mes chutes,",
				"Ô mon Sauveur!",
				"Tu vois mes luttes",
				"Et ma douleur."
			]
		},
		{"label":"Choeur",
			"lines":[
				"Roc séculaire,",
				"Frappé pour moi",
				"Sur le Calvaire,",
				"Je viens à toi."
			]
		},
		{"label":"2",
			"lines":[
				"Oh! purifie,",
				"Lave, Seigneur,",
				"Et sanctifie",
				"Mon pauvre coeur,",
				"Ma main tremblante",
				"Ne toffre rien;",
				"Ta croix sanglante",
				"Est mon seul bien."
			]
		},
		{"label":"3",
			"lines":[
				"Dans la détresse",
				"Sois mon berger,",
				"Ma forteresse",
				"Dans le danger,",
				"Et qu'à toute heure,",
				"Que chaque jour,",
				"Mon coeur demeure",
				"En ton amour."
			]
		}
	]
}

