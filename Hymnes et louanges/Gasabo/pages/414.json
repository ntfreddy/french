{
	"stanzas":3,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Pour moi l'aurore",
				"D'un nouveau jour",
				"Se lève encore",
				"Dans ce séjour.",
				"Sur ton enfant,",
				"Dieu tout-puissant!",
				"Dès le matin",
				"Pose ta main;",
				"Verse en mon âme",
				"Ta douce paix :",
				"Mon coeur réclame",
				"Tous tes bienfaits."
			]
		},
		{"label":"2",
			"lines":[
				"Je voudrais faire,",
				"En ce bas lieu,",
				"Tout pour te plaire,",
				"O mon bon Dieu!",
				"Mais le péché",
				"Reste caché",
				"Dans mon esprit",
				"Et me séduit.",
				"Vois ma faiblesse",
				"Et me soutiens",
				"Par ta tendresse;",
				"Je t'appartiens."
			]
		},
		{"label":"3",
			"lines":[
				"Fais-moi comprendre",
				"Ta charité,",
				"Et bien entendre",
				"Ta vérité!",
				"Loin du danger,",
				"Divin berger!",
				"Conduis mes pas,",
				"Jusqu'au trépas.",
				"Que ta puissance",
				"Soit chaque jour",
				"Ma délivrance,",
				"O Dieu d'amour!"
			]
		}
	]
}

