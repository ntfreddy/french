{
	"stanzas":5,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Repose ton âme",
				"Dans la sainteté,",
				"De ton Dieu proclame",
				"La fidélité;",
				"La sainte Parole",
				"Dont il te nourrit,",
				"Condamne et console,",
				"Blesse mais guérit."
			]
		},
		{"label":"2",
			"lines":[
				"Repose ton âme",
				"Dans la sainteté",
				"Ne crains ni le blâme,",
				"Ni l'adversité;",
				"Tout près de ton guide,",
				"La main dans la main,",
				"Le désert aride",
				"Fleurira soudain."
			]
		},
		{"label":"3",
			"lines":[
				"Repose ton âme",
				"Dans la sainteté,",
				"L'Esprit-saint réclame",
				"Ton activité;",
				"Jésus, par sa grâce",
				"Demeurant en toi,",
				"Choisira ta place",
				"Pour l'oeuvre du Roi."
			]
		},
		{"label":"4",
			"lines":[
				"Repose ton âme",
				"Dans la sainteté,",
				"Entretiens la flamme",
				"De la charité.",
				"En suivant le Maître",
				"Doux, humble de coeur,",
				"Tu feras connaître,",
				"La grâce au pécheur."
			]
		},
		{"label":"5",
			"lines":[
				"Repose ton âme",
				"Dans la sainteté,",
				"Quand la foule acclame",
				"La mondanité;",
				"Pense à la couronne",
				"Promise au vainqueur.",
				"Va, le ciel l'ordonne,",
				"Servir ton Sauveur! "
			]
		}
	]
}

