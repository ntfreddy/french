{
	"stanzas":4,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Adorons le Roi,",
				"Le Roi glorieux !",
				"Acceptons sa loi,",
				"Qui nous rend heureux !",
				"Son pouvoir nous garde,",
				"Son amour nous suit,",
				"Son oeil nous regarde",
				"Le jour et la nuit."
			]
		},
		{"label":"2",
			"lines":[
				"Racontons en choeur",
				"Les dons qu'il nous fit :",
				"Un puissant Sauveur",
				"Et don Saint-Esprit.",
				"Maître du tonnerre",
				"Et des ouragans,",
				"C'est un tendre Père",
				"Pour tous ses enfants."
			]
		},
		{"label":"3",
			"lines":[
				"Ses divines lois",
				"Règlent l'univers ;",
				"Sa puissante voix",
				"Apaise les mers.",
				"Il est notre Maître,",
				"Notre défenseur ;",
				"En Christ il veut être",
				"Notre Rédempteur."
			]
		},
		{"label":"4",
			"lines":[
				"Ses compassions",
				"Dépassent encor",
				"L'océan, les monts",
				"Et les astres d'or.",
				"Chantons ses louanges,",
				"Pécheurs rachetés,",
				"Et comme les anges",
				"Disons ses bontés. "
			]
		}
	]
}

