{
	"stanzas":4,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Douleur profonde!",
				"Les biens du monde,",
				"Ainsi que l'onde,",
				"Passent sans revenir;",
				"Et condamnée,",
				"La fleur fanée,",
				"En s'effeuillant nous arrache un soupir."
			]
		},
		{"label":"2",
			"lines":[
				"Quand, éphémère,",
				"Notre poussière",
				"Retourne en terre",
				"Et rentre dans son sein,",
				"Oh! que d'alarmes!",
				"Oh! que de larmes!",
				"Et pour nos coeurs où trouver un soutien?"
			]
		},
		{"label":"3",
			"lines":[
				"Ainsi céleste,",
				"Ta main nous reste;",
				"Ta voix proteste",
				"Et dit : Espère encor!",
				"Car dans la tombe,",
				"Où tout succombe,",
				"Mon bras puissant a su dompter la mort."
			]
		},
		{"label":"4",
			"lines":[
				"Voix salutaire",
				"D'un Dieu, d'un frère,",
				"Mets la lumière",
				"Dans le muet tombeau!",
				"Viens en mon âme,",
				"Qui te réclame,",
				"Viens faire luire un céleste flambeau!"
			]
		}
	]
}

