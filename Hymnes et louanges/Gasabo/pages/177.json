{
	"stanzas":7,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Mon âme en silence",
				"Se tient devant toi.",
				"Oh! Rends ta présence",
				"Sensible à ma foi."
			]
		},
		{"label":"2",
			"lines":[
				"Je ne veux connaître",
				"Aucune autre voix.",
				"Que la tienne, ô Maître,",
				"Toi seul, parle-moi"
			]
		},
		{"label":"3",
			"lines":[
				"Parole bénie",
				"De mon Rédempteur,",
				"Parole de vie,",
				"Pénètre en mon coeur."
			]
		},
		{"label":"4",
			"lines":[
				"C'est toi la lumière",
				"Qui brille en la nuit,",
				"L'eau qui désaltère,",
				"Le pain qui nourrit."
			]
		},
		{"label":"5",
			"lines":[
				"Seigneur, je t'écoute,",
				"Seigneur, parle-moi!",
				"Sans crainte, ni doute,",
				"Je m'attends à toi."
			]
		},
		{"label":"6",
			"lines":[
				"Oui, daigne m'instruire",
				"Et dis tout, Seigneur,",
				"Ce que je dois dire",
				"À ton serviteur."
			]
		},
		{"label":"7",
			"lines":[
				"Qu'en moi, ta voix fasse",
				"Abonder toujours",
				"Les fruits de la grâce,",
				"Les fruits de l'amour. "
			]
		}
	]
}

