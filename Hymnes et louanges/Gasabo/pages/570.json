{
	"stanzas":3,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"La bande joyeuse",
				"Des petits enfants,",
				"Souriante, heureuse,",
				"Entonne ses chants.",
				"Une ardeur nouvelle",
				"Brille dans leurs yeux;",
				"Pleins d'un nouveau zèle,",
				"Chantons avec eux."
			]
		},
		{"label":"2",
			"lines":[
				"Remplis d'espérance,",
				"Joignons nos efforts;",
				"C'est l'obéissance",
				"Qui nous rendra forts.",
				"Cherchons la sagesse",
				"Loin des faux plaisirs;",
				"Combattons sans cesse",
				"Les mauvais désirs."
			]
		},
		{"label":"3",
			"lines":[
				"Ô notre bon Père,",
				"Qui nous vois des cieux,",
				"Reçois la prière",
				"De nos coeurs joyeux;",
				"Que ta seule crainte",
				"Règne en nous, Seigneur,",
				"Et que ta loi sainte",
				"Soit notre bonheur."
			]
		}
	]
}

