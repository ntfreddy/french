{
	"stanzas":2,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Pourquoi la tristesse",
				"Sur ton front rêveur?",
				"Pourquoi la détresse",
				"Dans ton pauvre coeur?",
				"Élu de la vie,",
				"Relève les yeux.",
				"Jésus te convie",
				"Au bonheur des cieux."
			]
		},
		{"label":"2",
			"lines":[
				"Est-ce ta misère",
				"Qui fait ton tourment?",
				"Craindrais-tu, mon frère,",
				"Le grand jugement?",
				"Eh bien! plus de crainte!",
				"Vois, clouée au bois,",
				"La victime sainte.",
				"Regarde à la croix."
			]
		}
	]
}

