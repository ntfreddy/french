{
	"stanzas":4,
	"music": [
	],
	"lyrics": [
		{"label":"1",
			"lines":[
				"Roi des anges,",
				"Mes louanges",
				"Montent-elles jusqu'à toi?",
				"Et toi-même,",
				"Dieu suprême,",
				"Descends-tu jusques à moi?",
				"Ô mystère!",
				"Ô mystère!",
				"Insondable sans la foi!"
			]
		},
		{"label":"2",
			"lines":[
				"Tendre Père,",
				"Ma prière",
				"Irait-elle jusqu'à toi,",
				"Si toi-même,",
				"Dieu suprême,",
				"Ne descendais jusqu'à moi?",
				"Ô mystère!",
				"Ô mystère!",
				"Adorable par ma foi!"
			]
		},
		{"label":"3",
			"lines":[
				"De l'abîme,",
				"Vers la cime,",
				"Vers le trône de mon Roi,",
				"Ma prière,",
				"Ô mon Père,",
				"S'élève jusques à toi!",
				"Ô Dieu tendre!",
				"Daigne entendre",
				"La requête de ma foi!"
			]
		},
		{"label":"4",
			"lines":[
				"C'est toi-même,",
				"Dieu suprême,",
				"Toi que je demande à toi,",
				"Ta présence,",
				"Ton absence,",
				"C'est vie ou c'est mort pour moi.",
				"Que ta grâce",
				"En moi fasse",
				"À jamais régner mon Roi!"
			]
		}
	]
}

