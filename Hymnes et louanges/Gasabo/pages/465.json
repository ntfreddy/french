	"lyrics": [
		{"label":"1",
			"lines":[
				"Es-tu lassé, ",
				"Rempli de tristesse?",
				"Dis tout à Jésus!  ",
				"Dis tout à Jésus!  ",
				"Son coeur est ouvert ",
				"À ta voix sans cesse.",
				"Oh! Dis tout à Jésus!  "
			]
		},
		{"label":"Choeur",
			"lines":[
				"Dis tout à Jésus!  ",
				"Oh! Dis-lui tout!",
				"Combien son accueil est doux!",
				"Il peut comprendre, ",
				"Il aime à t'entendre :",
				"Dis-lui simplement tout!"
			]
		},
		{"label":"2",
			"lines":[
				"Il voit tes yeux ",
				"Rougis par les larmes :",
				"Dis tout à Jésus!  ",
				"Dis tout à Jésus!  ",
				"Il connaît ton coeur, ",
				"Il sait tes alarmes.",
				"Oh! Dis tout à Jésus!  "
			]
		},
		{"label":"3",
			"lines":[
				"Si ton passé surgit ",
				"Comme une ombre :",
				"Dis tout à Jésus!  ",
				"Dis tout à Jésus!  ",
				"Il peut effacer ",
				"Tes péchés sans nombre.",
				"Oh ! Dis tout à Jésus!  "
			]
		},
		{"label":"4",
			"lines":[
				"Et pour demain ",
				"Ce que tu redoutes :",
				"Dis tout à Jésus!  ",
				"Dis tout à Jésus!  ",
				"Il est près de toi ",
				"Le long de la route.",
				"Oh ! Dis tout à Jésus!"
			]
		}
	]
}

